{
  "name": "subagent-scheduler",
  "version": "1.1.0",
  "description": "自适应子代理调度系统 - Phase 2增强版",
  "model": "kimi-coding/k2p5",
  "reasoning": true,
  
  "phase2": {
    "enabled": true,
    "llmClassifier": {
      "enabled": true,
      "model": "openai/gpt-4.1-mini",
      "confidenceThreshold": 0.75,
      "maxTokens": 150,
      "temperature": 0.1
    },
    "streamingProgress": {
      "enabled": true,
      "updateInterval": 10,
      "minUpdateDelta": 5
    },
    "resilience": {
      "enableDowngrade": true,
      "enableCheckpoint": true,
      "downgradeChain": {
        "Deep": "Standard",
        "Orchestrator": "Standard",
        "Batch": "Standard",
        "Standard": "Simple"
      }
    }
  },
  
  "costLimits": {
    "perTask": 1.0,
    "perSession": 10.0,
    "perDay": 50.0,
    "currency": "USD"
  },
  "branches": {
    "Simple": {
      "spawn": false,
      "maxTokens": 4000,
      "timeout": 10
    },
    "Standard": {
      "mode": "run",
      "cleanup": "delete",
      "timeout": 90,
      "maxConcurrent": 4,
      "maxRetries": 5
    },
    "Batch": {
      "mode": "run",
      "cleanup": "delete",
      "batchSize": 5,
      "maxConcurrent": 2,
      "maxRetries": 3
    },
    "Orchestrator": {
      "mode": "run",
      "cleanup": "delete",
      "maxSpawnDepth": 2,
      "maxConcurrent": 2,
      "maxRetries": 3
    },
    "Deep": {
      "mode": "session",
      "cleanup": "keep",
      "timeout": 600,
      "maxConcurrent": 1,
      "maxRetries": 2,
      "checkpointInterval": 300
    }
  },
  "confirmation": {
    "enabled": true,
    "excludeSimple": true,
    "showEstimation": true,
    "showHistoryStats": true,
    "timeout": 60
  },
  "monitoring": {
    "progressUpdateInterval": 10,
    "costAlertThreshold": 0.8,
    "enableCheckpoint": true
  },
  "database": {
    "path": "C:/Users/Jhon/.openclaw/workspace/skills/subagent-scheduler/subagent.db"
  },
  "feishu": {
    "enabled": true,
    "appId": "cli_a901df1f0cb8dbdf",
    "defaultChatId": null
  }
}
